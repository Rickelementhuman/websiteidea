'use client'

import Link from 'next/link'
import { useState } from 'react'
import { Button } from '../ui/Button'

export function Header() {
  const [isMenuOpen, setIsMenuOpen] = useState(false)

  const navItems = [
    { label: 'Product', href: '/product' },
    { label: 'Pricing', href: '/pricing' },
    { label: 'Science', href: '/science' },
    { label: 'About Us', href: '/about' },
    { label: 'Insights', href: '/insights' },
    { label: 'Exp 1', href: '/experiment-1' },
    { label: 'Exp 2', href: '/experiment-2' },
    { label: 'Exp 3', href: '/experiment-3' },
    { label: 'Exp 4', href: '/experiment-4' },
  ]

  return (
    <header className="fixed top-0 left-0 right-0 z-50">
      <div className="glass-panel-light border-b border-white/20">
        <div className="container mx-auto px-4">
          <div className="flex items-center justify-between h-20">
            {/* Logo - Single color, minimal */}
            <Link href="/" className="flex items-center space-x-2">
              <div className="text-2xl font-bold text-brand-navy">
                Element Human
              </div>
            </Link>

            {/* Desktop Navigation */}
            <nav className="hidden md:flex items-center space-x-8">
              {navItems.map((item) => (
                <Link
                  key={item.href}
                  href={item.href}
                  className="text-neutral-700 hover:text-brand-navy transition-colors font-medium text-sm"
                >
                  {item.label}
                </Link>
              ))}
            </nav>

            {/* CTA Button */}
            <div className="hidden md:block">
              <Link href="/meet-with-us">
                <Button variant="solid" size="sm">
                  Meet With Us
                </Button>
              </Link>
            </div>

            {/* Mobile Menu Button */}
            <button
              onClick={() => setIsMenuOpen(!isMenuOpen)}
              className="md:hidden text-brand-navy"
            >
              <svg className="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                {isMenuOpen ? (
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
                ) : (
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 6h16M4 12h16M4 18h16" />
                )}
              </svg>
            </button>
          </div>

          {/* Mobile Menu */}
          {isMenuOpen && (
            <div className="md:hidden pb-6">
              <nav className="flex flex-col space-y-4">
                {navItems.map((item) => (
                  <Link
                    key={item.href}
                    href={item.href}
                    className="text-neutral-700 hover:text-brand-navy transition-colors font-medium"
                    onClick={() => setIsMenuOpen(false)}
                  >
                    {item.label}
                  </Link>
                ))}
                <Link href="/meet-with-us" onClick={() => setIsMenuOpen(false)}>
                  <Button variant="solid" size="sm" className="w-full">
                    Meet With Us
                  </Button>
                </Link>
              </nav>
            </div>
          )}
        </div>
      </div>
    </header>
  )
}
